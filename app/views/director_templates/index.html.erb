<h1>
  All directors
</h1>

<a href="/directors/new">
  Add a new director
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
      Bio
    </th>

    <th>
      Image url
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <%= director.bio %>
    </td>

    <td>
      <%= director.image_url %>
    </td>

    <td>
      <%= time_ago_in_words(director.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(director.updated_at) %> ago
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
